extends layout

block Subject
	title 마한끄투 관리 페이지

block JS
	script(type="text/javascript", src="/js/in_admin.min.js")
	
block Middle
	fieldset
		legend 암호입력{테이블은 한국어 영어 작업할때(한국어:ko, 영어는:en)}
		input#db-password(type='password', placeholder='암호')
		input#db-lang(placeholder='테이블')
	fieldset
		legend 추가 요청 받기
		div
			button#injeong-go 조회
			div
				table
					thead: tr
						td 승인?
						td 링크
						td #
						td 주제
						td 요청한 사람
						td 요청한 날
					tbody#injeong-data
			button#injeong-everything 모두 승인
			button#injeong-nothing 모두 거절
			button#injeong-apply 적용
	fieldset
		legend 상점 아이템 다루기
		div
			input#shop-word(placeholder='품목 (~ALL)')
			button#shop-go 조회
			button#shop-hide 숨기기
			div
				table
					thead: tr
						td id
						td 가격
						td 판매된 수
						td 기한
						td 종류
						td 업데이트한 날짜
						td 설정(아이템 착용 보너스)
						td 이름 (한국어)
						td 설명 (한국어)
						td 이름 (영어)
						td 설명 (영어)
					tbody#shop-data
			button#shop-add 추가
			button#shop-apply 적용
	fieldset
		legend 유저 스탯 다루기
		div
			input#user-id(placeholder='ID')
			input#user-nick(placeholder='닉네임')
			button#user-go 조회
			div
				table
					thead: tr
						td id
						td 핑
						td 유저 점수, 플레이타임 등 설정
						td 인벤토리
						td 착용 아이템
						td 닉네임
						td 닉체인지드(건들지 마시오)
						td 설명
						td 접속된 서버
						td 최근 로그인
						td 위반사항
						td 차단 풀어지는 날
						td 친구들
					tbody#user-data
			button#user-apply 적용
	fieldset
		legend 유저 감시하기
		div
			input#gamsi-id(placeholder='ID (,로 구분)')
			button#gamsi-go 감시
			div
				table
					thead: tr
						td id
						td 닉네임
						td 서버
					tbody#gamsi-data
	fieldset
		legend 끄투 단어 다루기
		div
			input#db-word(placeholder='단어')
			button#db-go 조회
			div#word-data
				div#wd-id
				input#wd-flag
				table
					thead: tr
						td #
						td 타입
						td 주제
						td 뜻
						td 행동
					tbody#wd-data
			div#word-flag
			div#word-hit
			button#word-add 추가
			button#db-apply 적용
	fieldset
		legend 끄투 DB에 단어 추가하기
		div
			input#db-theme(placeholder='주제 (~부터 적으면 검색)')
			textarea#db-list(rows=20, cols=100)
			button#db-ok 확인
	fieldset
		legend 끄투에서의 인기 단어
		button#kpw-query 조회
		textarea#kpw-html
		div#kpw-table
		button#kpw-flush 반영